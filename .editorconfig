root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
ij_javascript_spaces_within_imports = true
ij_typescript_spaces_within_imports = true

[{*.json,.*rc,*.yml}]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
